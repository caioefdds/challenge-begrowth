<%- include("partials/header.ejs"); %>
<%- include("partials/nav.ejs"); %>

<% if(message.success.length > 0) { %>
  <div class="alert alert-success text-center">
    <%= message.success %>
  </div>
<% } else if(message.error.length > 0) { %>
  <div class="alert alert-danger text-center">
    <%= message.error %>
  </div>
<% } %>

    <div class="container-fluid mt-5 text-center">
      <div class="row justify-content-center">
        <div class="card col-lg-6 col-md-8 col-sm-12">
          <div class="card-header">
            <h1>Criar nova Demanda</h1>
          </div>
          <div class="card-body">
            <form action="/demanda/create" method="post" onsubmit="Data(event, this)">
              <input type="hidden" name="datenow" id="datenow">
              <input type="hidden" name="data_validade" id="new_validade">
              <input type="hidden" name="tabCompanyId" value="<%= session.id %>">
              <label for="descricao">Nome do produto</label>
              <input type="text" class="form-control" name="descricao" placeholder="Insira o nome do produto"><br>
              <label for="data_validade">Data de validade</label>
              <input type="date" class="form-control" id="data_validade" placeholder="Data"><br>
              <label for="local_entrega">Local de Entrega</label>
              <input type="text" class="form-control" name="local_entrega" placeholder="Insira o local de entrega"><br>
              <button type="submit" class="btn btn-success">Criar Demanda</button>
            </form>
          </div>
        </div>
      </div>

    </div>
<%- include("partials/footer.ejs"); %>
